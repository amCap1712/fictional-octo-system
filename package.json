{
  "name": "listenbrainz",
  "version": "0.0.1",
  "description": "ListenBrainz Now Playing Viewer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build-linux": "electron-builder -l",
    "build-macos": "electron-builder -m",
    "build-windows": "electron-builder -w",
    "dist": "electron-builder"
  },
  "homepage": "https://listenbrainz.org/",
  "repository": {
    "type": "git",
    "url": "https://github.com/metabrainz/listenbrainz-now-playing.git"
  },
  "keywords": [
    "listenbrainz",
    "musicbrainz",
    "music",
    "metadata"
  ],
  "author": "The MetaBrainz Foundation <support@metabrainz.org>",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
    "linux": {
      "category": "music",
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "./assets/icon.icns"
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "./assets/icon.ico"
    },
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "./assets/entitlements.mac.plist",
      "entitlementsInherit": "./assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "afterSign": "./notarize.js"
  },
  "dependencies": {
    "@electron/asar": "^3.2.4",
    "@electron/notarize": "^2.1.0",
    "@electron/osx-sign": "^1.0.4"
  }
}
